# General Configuration
BIND_ADDRESS=127.0.0.1
RESTART_POLICY=unless-stopped

# Network
NETWORK_NAME=homelab-network

# Images / Versions
MYSQL_IMAGE=mysql:8.0
ADMINER_IMAGE=adminer:latest
REDIS_IMAGE=redis:7-alpine
REDIS_INSIGHT_IMAGE=redis/redisinsight:latest
LOKI_IMAGE=grafana/loki:2.9.0
PROMTAIL_IMAGE=grafana/promtail:2.9.0
TEMPO_IMAGE=grafana/tempo:2.3.1
RCLONE_IMAGE=rclone/rclone:latest
PROMETHEUS_IMAGE=prom/prometheus:v2.55.1
OTEL_COLLECTOR_IMAGE=otel/opentelemetry-collector-contrib:0.88.0
NODE_EXPORTER_IMAGE=prom/node-exporter:latest
GRAFANA_IMAGE=grafana/grafana:10.2.0
UPTIME_KUMA_IMAGE=louislam/uptime-kuma:1
DOCKGE_IMAGE=louislam/dockge:1
NPM_IMAGE=jc21/nginx-proxy-manager:latest
CLOUDFLARED_IMAGE=cloudflare/cloudflared:latest

# System Paths
DOCKER_SOCK=/var/run/docker.sock
DOCKER_CONTAINERS_LIB=/var/lib/docker/containers

# Volumes
MYSQL_DATA=homelab_mysql_data
REDIS_DATA=homelab_redis_data
LOKI_DATA=homelab_loki_data
PROMETHEUS_DATA=homelab_prometheus_data
GRAFANA_DATA=homelab_grafana_data
NPM_DATA=homelab_npm_data
NPM_LETSENCRYPT=homelab_npm_letsencrypt
PORTAINER_DATA=homelab_portainer_data
REDIS_INSIGHT_DATA=homelab_redis_insight_data
UPTIME_KUMA_DATA=homelab_uptime_kuma_data
DOCKGE_DATA=homelab_dockge_data

# Container Names (Service Discovery)
MYSQL_CONTAINER_NAME=homelab-mysql
REDIS_CONTAINER_NAME=homelab-redis
LOKI_CONTAINER_NAME=homelab-loki
PROMETHEUS_CONTAINER_NAME=homelab-prometheus
TEMPO_CONTAINER_NAME=homelab-tempo
GRAFANA_CONTAINER_NAME=homelab-grafana
NPM_CONTAINER_NAME=homelab-npm
OTEL_COLLECTOR_CONTAINER_NAME=homelab-otel-collector
TUNNEL_CONTAINER_NAME=homelab-tunnel
DOCKGE_CONTAINER_NAME=homelab-dockge
UPTIME_KUMA_CONTAINER_NAME=homelab-uptime-kuma
PORTAINER_CONTAINER_NAME=homelab-portainer
NODE_EXPORTER_CONTAINER_NAME=homelab-node-exporter
ADMINER_CONTAINER_NAME=homelab-adminer
REDIS_INSIGHT_CONTAINER_NAME=homelab-redis-insight
PROMTAIL_CONTAINER_NAME=homelab-promtail
BACKUP_LOGS_CONTAINER_NAME=homelab-backup-logs

# MySQL
MYSQL_ROOT_PASSWORD='root_password'
MYSQL_DATABASE=homelab
MYSQL_USER=mysql_user
MYSQL_PASSWORD='mysql_user_password'
MYSQL_PORT=3307
ADMINER_PORT=8080
ADMINER_DESIGN=hydra

# Redis
REDIS_PASSWORD='redis_password'
REDIS_PORT=6379
REDIS_INSIGHT_PORT=5540
REDIS_APPENDONLY=yes

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD='admin_password'
GRAFANA_PORT=3000
GRAFANA_ROOT_URL=http://localhost:3000
GRAFANA_ALLOW_SIGN_UP=false
UPTIME_KUMA_PORT=3001

# Tempo
TEMPO_PORT=3200

# Prometheus
PROMETHEUS_PORT=9090
NODE_EXPORTER_PORT=9100

# Integrations
DISCORD_WEBHOOK_URL='https://discord.com/api/webhooks/webhook_id/webhook_token'
SHAREPOINT_REMOTE_NAME=sharepoint
BACKUP_INTERVAL=3600
BACKUP_DEST_PATH=/homelab

# Loki
LOKI_PORT=3100

# OTLM Collector
OTEL_GRPC_PORT=4317
OTEL_HTTP_PORT=4318
OTEL_METRICS_PORT=8888
OTEL_HEALTH_PORT=13133

# NGINX Proxy Manager (Gateway)
NPM_HTTP_PORT=8090
NPM_HTTPS_PORT=4443
NPM_ADMIN_PORT=81

# Cloudflared
CLOUDFLARED_TUNNEL_NAME=homelab-tunnel
CLOUDFLARED_TOKEN='tunnel_token_here'

# Admin UIs
DOCKGE_PORT=5001
PORTAINER_PORT=9000
# Tests
K6_IMAGE=grafana/k6:latest
